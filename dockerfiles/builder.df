FROM alpine:3.6 AS builder

RUN mkdir /makisu-internal
RUN mkdir /makisu-internal/certs

ADD ./bins/makisu-builder /makisu-internal/makisu-builder
ADD ./assets/cacerts.pem /makisu-internal/certs/cacerts.pem

FROM scratch AS runner
COPY --from=builder /makisu-internal /makisu-internal
ENTRYPOINT ["/makisu-internal/makisu-builder"]
